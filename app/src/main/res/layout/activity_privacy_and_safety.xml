<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HelpCentreActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/back_arrow_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size10"
                    android:background="@mipmap/arrow_icon" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/size15"
                    android:text="@string/privacy_safety"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize16"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/size1"
                android:background="@color/black" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_weight=".5"
                    android:gravity="left"
                    android:text="@string/allow_other_to_find_me"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize12" />

                <ToggleButton
                    android:id="@+id/allow_others_toggle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size20"
                    android:layout_weight=".5" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size10"
                    android:layout_weight=".5"
                    android:gravity="start"
                    android:text="@string/private_account"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize12" />

                <ToggleButton
                    android:id="@+id/private_account_toggle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size20"
                    android:layout_weight=".5" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size20"
            android:text="@string/safety"
            android:textSize="@dimen/textsize12" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size10"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size10"
                android:layout_weight=".5"
                android:gravity="start"
                android:text="@string/who_send_comment"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize12" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/size20"
                android:layout_margin_left="@dimen/size20"
                android:layout_weight=".5"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/send_comment_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size10"
                    android:text="Everyone"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize14" />

                <TextView
                    android:id="@+id/next_icon_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/arrow_icon" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size10"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size10"
                android:layout_weight=".5"
                android:gravity="start"
                android:text="@string/who_react_to_me"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize12" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/size20"
                android:layout_margin_left="@dimen/size20"
                android:layout_weight=".5"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/react_me_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size10"
                    android:text="Everyone"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize14" />

                <TextView
                    android:id="@+id/send_arrow_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/arrow_icon" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size10"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size10"
                android:layout_weight=".5"
                android:gravity="left"
                android:text="@string/who_can_duet_with_me"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize12" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin_left="@dimen/size20"
                android:layout_weight=".5"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/duet_privact_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size10"
                    android:text="Everyone"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize14" />

                <TextView
                    android:id="@+id/arrow_icon_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/arrow_icon" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size10"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size10"
                android:layout_weight=".5"
                android:gravity="start"
                android:text="@string/who_send_me_msg"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize12" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin_left="@dimen/size20"
                android:layout_weight=".5"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/who_send_msg_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size10"
                    android:text="Everyone"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize14" />

                <TextView
                    android:id="@+id/arrow_icom_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/arrow_icon" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size10"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size10"
                android:layout_weight=".5"
                android:gravity="start"
                android:text="@string/allow_download"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize12" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin_left="@dimen/size20"
                android:layout_weight=".5"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/allow_download_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size10"
                    android:text="Everyone"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize14" />

                <TextView
                    android:id="@+id/back_arrow_icon_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/arrow_icon" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size10"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/blokc_list_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/size10"
                android:layout_weight=".5"
                android:gravity="start"
                android:text="@string/block_list"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize12" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin_left="chanes"
                android:layout_weight=".5"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/block_list_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/size10"
                    android:text="Everyone"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize14" />

                <TextView
                    android:id="@+id/arrow_icon_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/arrow_icon" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>